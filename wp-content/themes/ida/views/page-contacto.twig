{% extends "base.twig" %}

{% block content %}

	<!-- Contacto -->

	<div id="contact">

		<div class="container">

			<h1 class="page-title mb-5">{{post.title}}</h1>

			<!-- Swiper -->
			<div class="card-mobile d-md-none">

				<div class="swiper-container">
					<div class="swiper-wrapper">
						{% for item in post.meta('personal_contacto') %}
							<div class="swiper-slide">


								<div class="card">
									<div class="card-body">
										<p class="card_tag mb-2">{{item.area |upper}}</p>
										<h5 class="card-title mb-0">{{item.nombre}}</h5>
										<p class="role serif">{{item.cargo}}</p>
										<p class="card-text">{{item.telefono}}<br>
											{{item.mail}}</p>
									</div>
								</div>


							</div>
						{% endfor %}


					</div>
				</div>


			</div>

			<!-- Contacto Desktop -->

			<div class="contacto-desktop d-none d-md-inline ">
				<div class="row">

					{% for item in post.meta('personal_contacto') %}


						<div class="col-md-4 col-lg-4 ">
							<div class="card mb-0">
								<div class="card-body">
									<p class="card_tag mb-2">{{item.area |upper}}</p>
									<h5 class="card-title mb-0">{{item.nombre}}</h5>
									<p class="role serif">{{item.cargo}}</p>
									<p class="card-text">{{item.telefono}}<br>
										{{item.mail}}</p>
								</div>
							</div>
						</div>

					{% endfor %}


				</div>

			</div>

		</div>
	</div>

	<!-- Form -->


	<div id="questions">
		<div class="container">
			<h2 class="page-subtitle mb-4">¿Tienes preguntas?</h2>
			<p class="mb-4">Completa el formularios siguiente y nos comunicaremos a la brevedad contigo.</p>

			<div class="contact-form">
				{{post.content}}
			</div>
			

			<!--<form action="">
				<div class="row">
					<div class="col-lg-5">
						<input type="text" class="form-control mb-4" id="nombre" placeholder="NOMBRE">
						<input type="email" class="form-control mb-4" id="email" placeholder="EMAIL">
						<input type="tel" class="form-control mb-4" id="tel" placeholder="TELÉFONO">
					</div>
					<div class="col-lg-7 text-lg-right">
						<textarea name="text" class="form-control mb-4" id="mensaje" cols="70" rows="6" placeholder="MENSAJE"></textarea>

						<button type="submit" class="btn btn-primary ml-0">Enviar</button>
					</div>
				</div>
			</form>-->

		</div>
	</div>

	<div id="sedes">
		<div class="container">
			<div class="row">
				<div class="col-lg-6 col-md-12">
					<h2 class="page-subtitle mb-4">Sede Montevideo</h2>
					<img class="page-img mb-5" src="{{post.meta('foto_mapa')}}" alt="Mapa Sede de Montevideo">

					<div class="container">


						<div class="mb-3">
							<img src="{{theme.link}}/img/vector-direction.png" alt="Icono de Edificio">
							<p class="d-inline ml-2">{{post.meta('direccion')}}</p>
						</div>

						<div class="mb-3">
							<img src="{{theme.link}}/img/vector-phone.png" alt="Icono de Teléfono">
							<p class="d-inline ml-2">{{post.meta('telefono')}}</p>
						</div>

						<div class="mb-3">
							<img src="{{theme.link}}/img/vector-mail.png" alt="Icono de sobre">
							<p class="d-inline ml-2">{{post.meta('e-mail')}}</p>
						</div>

						<div class="mb-3">
							<img src="{{theme.link}}/img/vector-clock.png" alt="Icono de reloj">
							<p class="d-inline ml-2">{{post.meta('horario')}}</p>
						</div>

					</div>
				</div>
				<div class="col-lg-6 col-md-12 mt-4 mt-lg-0">
					<h2 class="page-subtitle mb-4">Oficina de Frontera en Chuy</h2>
					<img class="page-img mb-5" src="{{post.meta('foto_mapa_chuy')}}" alt="Mapa Sede Chuy">

					<div class="container">


						<div class="mb-3">
							<img src="{{theme.link}}/img/vector-direction.png" alt="Icono de Edificio">
							<p class="d-inline ml-2">{{post.meta('direccion_chuy')}}</p>
						</div>

						<div class="mb-3">
							<img src="{{theme.link}}/img/vector-phone.png" alt="Icono de Teléfono">
							<p class="d-inline ml-2">{{post.meta('telefono_chuy')}}</p>
						</div>

						<div class="mb-3">
							<img src="{{theme.link}}/img/vector-mail.png" alt="Icono de sobre">
							<p class="d-inline ml-2">{{post.meta('e-mail_chuy')}}</p>
						</div>

						<div class="mb-3">
							<img src="{{theme.link}}/img/vector-clock.png" alt="Icono de reloj">
							<p class="d-inline ml-2">{{post.meta('horario_chuy')}}</p>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
